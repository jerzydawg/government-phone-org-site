---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const title = `${keyword} - Top Free Phone Providers | ${siteName}`;
const description = "Compare the best free government phone providers. Find which companies offer free phones and service through Lifeline and ACP programs. Choose your provider today.";
const canonicalURL = `${siteURL}/providers`;

const jsonLD = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Article",
      "headline": "Leading Free Government Phone Service Providers Comparison",
      "description": "Complete guide to top providers offering free phones and cellular service through federal assistance programs",
      "author": {
        "@type": "Organization",
        "name": siteName
      },
      "publisher": {
        "@type": "Organization",
        "name": siteName,
        "url": siteURL
      },
      "datePublished": "2025-12-12",
      "dateModified": "2025-12-12",
      "url": canonicalURL
    },
    {
      "@type": "FAQPage",
      "mainEntity": [
        {
          "@type": "Question",
          "name": "Which providers offer the best free government phone plans?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Top providers include Assurance Wireless, SafeLink Wireless, and TruConnect. Each offers different phone models and data allowances, so compare their specific benefits before choosing."
          }
        },
        {
          "@type": "Question",
          "name": "How do I switch between free phone providers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "You can transfer your service by contacting your new provider. They'll handle the switch process, and you can keep your phone number when moving between companies."
          }
        },
        {
          "@type": "Question",
          "name": "Can I get a smartphone through government phone programs?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Yes, most major providers now offer Android smartphones with their free plans. Some providers also offer upgraded devices for a small monthly fee."
          }
        },
        {
          "@type": "Question",
          "name": "What's the difference between Lifeline and ACP providers?",
          "acceptedAnswer": {
            "@type": "Answer",
            "text": "Many companies participate in both programs. Lifeline focuses on phone service while ACP provides internet discounts. Some providers bundle both benefits together."
          }
        }
      ]
    },
    {
      "@type": "HowTo",
      "name": "How to Select the Right Free Phone Provider",
      "description": "Step-by-step process for choosing the best free government phone provider for your needs",
      "step": [
        {
          "@type": "HowToStep",
          "name": "Review Coverage Areas",
          "text": "Confirm the provider offers strong coverage in your area by checking their coverage map online or asking neighbors about their experience."
        },
        {
          "@type": "HowToStep",
          "name": "Compare Phone Options",
          "text": "Look at what devices each provider offers. Some give basic phones while others provide smartphones with more features."
        },
        {
          "@type": "HowToStep",
          "name": "Check Data Allowances",
          "text": "Review how much data, talk time, and texts each provider includes in their free plan to match your usage needs."
        },
        {
          "@type": "HowToStep",
          "name": "Contact Your Chosen Provider",
          "text": "Reach out to your selected company to start the application process and schedule phone delivery or pickup."
        }
      ]
    },
    {
      "@type": "Service",
      "name": "Free Government Phone Provider Comparison",
      "description": "Comprehensive comparison service helping users find the best free phone provider for their location and needs",
      "provider": {
        "@type": "Organization",
        "name": siteName
      },
      "areaServed": "United States",
      "serviceType": "Government Phone Provider Comparison"
    }
  ]
};
---

<Layout title={title} description={description} canonicalURL={canonicalURL} jsonLD={jsonLD}>
